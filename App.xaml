<Application x:Class="WorkweekChecker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WorkweekChecker.ViewModels"
             xmlns:conv="clr-namespace:WorkweekChecker.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Base.xaml"/>
                <ResourceDictionary Source="Themes/Light.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
            <conv:BoolToTextConverter x:Key="BoolToTextConverter"/>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:RestWorkToBgConverter x:Key="RestWorkToBgConverter"/>
            <vm:ViewModelLocator x:Key="Locator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
