<Window x:Class="WorkweekChecker.Views.HolidayImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="导入官方节假日" Height="340" Width="560"
        WindowStartupLocation="CenterOwner">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{DynamicResource BgTop}" Offset="0"/>
            <GradientStop Color="{DynamicResource BgBottom}" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="从文件或剪贴板导入，JSON 字段：specialHolidays / specialWorkdays" Foreground="{DynamicResource TextSecondary}" />
        <TextBox x:Name="PreviewBox" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 BorderBrush="{DynamicResource ControlBorder}" Background="{DynamicResource CardBg}"
                 Foreground="{DynamicResource TextPrimary}" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="从文件..." Click="LoadFile_Click" Style="{DynamicResource SecondaryButton}"/>
            <Button Content="从剪贴板" Click="LoadClipboard_Click" Style="{DynamicResource SecondaryButton}"/>
            <Button Content="导入" Click="Import_Click" Style="{DynamicResource PrimaryButton}"/>
            <Button Content="关闭" Click="Close_Click" Style="{DynamicResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
