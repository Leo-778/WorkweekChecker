<UserControl x:Class="WorkweekChecker.Controls.Badge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:WorkweekChecker.Converters"
             x:Name="root" MinWidth="56" Height="28">
    <UserControl.Resources>
        <conv:BadgeTextConverter x:Key="BadgeTextConverter"/>
    </UserControl.Resources>
    <Border CornerRadius="10" Padding="10,2">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource WorkBg}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=root, Path=IsRest}" Value="True">
                        <Setter Property="Background" Value="{DynamicResource RestBg}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <TextBlock Foreground="{DynamicResource OnDark}" FontWeight="SemiBold" VerticalAlignment="Center">
            <TextBlock.Text>
                <MultiBinding Converter="{StaticResource BadgeTextConverter}">
                    <Binding ElementName="root" Path="IsRest"/>
                    <Binding ElementName="root" Path="Text"/>
                    <Binding ElementName="root" Path="EmphasizedText"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
    </Border>
</UserControl>
